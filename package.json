{
  "name": "dspre-script-support",
  "displayName": "DSPRE-Script-Support",
  "publisher": "CorentinMace",
  "description": "",
  "version": "1.0.8",
  "engines": {
    "vscode": "^1.95.0"
  },

  "categories": [
    "Other"
  ],
  "activationEvents": [
      "workspace.onDidOpenTextDocument",
      "languages.registerDocumentLinkProvider",
      "languages.registerHoverProvider"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
      "command": "extension.openFileAtLine",
      "title": "Open File at Line"
      },
      {
        "command": "json-autocompletion.changeFile",
        "title": "Change Autocomplete File"
      },
      {
        "command": "extension.changeTheme",
        "title": "Change colors to the Pokemon DS Script Theme"
      },
      {
        "command": "extension.multipleFileOpening",
        "title": "Enable or Disable the automatic multiple file opening"
      },
      {
        "command": "extension.openScrcmd",
        "title": "Open scrcmd"
      }
    ],  
    "languages": [
        {
            "id": "pokemon_ds_script",
            "aliases": ["Pokemon DS Script", "pokemon_ds_script"],
            "extensions": [".script"],
            "configuration": "./language-configuration.json",
            "icon": {
              "light": "./resources/icons/script.png",
              "dark": "./resources/icons/script.png"
            }
        },
        {
          "id": "pokemon_ds_action",
          "aliases": ["Pokemon DS Action", "pokemon_ds_action"],
          "extensions": [".action"],
          "configuration": "./language-configuration.json",
          "icon": {
            "light": "./resources/icons/action.png",
            "dark": "./resources/icons/action.png"
          }
      }
    ],
    "grammars": [
        {
            "language": "pokemon_ds_script",
            "scopeName": "source.pokemon_ds_script",
            "path": "./syntaxes/PokemonDSScript.tmLanguage.json"
        },
        {
          "language": "pokemon_ds_action",
          "scopeName": "source.pokemon_ds_script",
          "path": "./syntaxes/PokemonDSScript.tmLanguage.json"
      }
    ]
  },
  "configuration": {
    "type": "object",
    "properties": {
      "json-autocompletion.file": {
        "type": "string",
        "default": "scrcmd-hgss.json",
        "description": "Select the JSON file for autocompletion.",
        "enum": ["scrcmd-hgss.json", "scrcmd-plat.json", "scrcmd-dp.json"]
      },
      "extension.Theme": {
        "type": "string",
        "default": "Change Theme",
        "description": "Change the current theme to get the right colors for the Pokemon DS Script"
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/mocha": "^10.0.9",
    "@types/node": "20.x",
    "eslint": "^9.13.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
