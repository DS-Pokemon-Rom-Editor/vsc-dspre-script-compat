{
    "name": "Custom Script Theme",
    "type": "dark",  // You can also use "light" depending on your preference
    "colors": {
        "editor.background": "#1e1e1e",
        "editor.foreground": "#d4d4d4"
    },
    "tokenColors": [
        {
            "scope": "entity.name.control.pokemon_ds_action", // Orange
            "settings": {
                "foreground": "#d69825"
            }
        },
        {
            "scope": "entity.name.action.pokemon_ds_action",
            "settings": {
                "foreground": "#8edb61"
            }
        },
        {
            "scope": "entity.name.func.pokemon_ds_action",
            "settings": {
                "foreground": "#8f56a0"
            }
        },
        {
            "scope": "constant.numeric.pokemon_ds_action", // Yellow
            "settings": {
                "foreground": "#dbdb17"
            }
        },
        {
            "scope": "constant.numeric.prefixed.pokemon_ds_action", // Green
            "settings": {
                "foreground": "#257c25"
            }
        },
        {
            "scope": "keyword.operator.pokemon_ds_action", // Comparison keywords
            "settings": {
                "foreground": "#d69825"
            }
        },
        {
            "scope": "support.function.cmd.pokemon_ds_action", // CMD_ commands
            "settings": {
                "foreground": "#FFFFFF" // White
            }
        },
        {
            "scope": "text.other.pokemon_ds_action", // Blue
            "settings": {
                "foreground": "#7391d3"
            }
        },
        {
            "scope": "comment.line.double-slash.pokemon_ds_action", // White for comments starting with ##
            "settings": {
                "foreground": "#9c9898"
            }
        },
        {
            "scope": "entity.name.control.pokemon_ds_script", // Orange
            "settings": {
                "foreground": "#d69825"
            }
        },
        {
            "scope": "entity.name.action.pokemon_ds_script",
            "settings": {
                "foreground": "#8edb61"
            }
        },
        {
            "scope": "entity.name.func.pokemon_ds_script",
            "settings": {
                "foreground": "#8f56a0"
            }
        },
        {
            "scope": "constant.numeric.pokemon_ds_script", // Yellow
            "settings": {
                "foreground": "#dbdb17"
            }
        },
        {
            "scope": "constant.numeric.prefixed.pokemon_ds_script", // Green
            "settings": {
                "foreground": "#257c25"
            }
        },
        {
            "scope": "entity.name.symbol.pokemon_ds_script", // Orange
            "settings": {
                "foreground": "#d69825"
            }
        },
        {
            "scope": "keyword.operator.pokemon_ds_script", // Comparison keywords
            "settings": {
                "foreground": "#d69825"
            }
        },
        {
            "scope": "support.function.cmd.pokemon_ds_script", // CMD_ commands
            "settings": {
                "foreground": "#FFFFFF" // White
            }
        },
        {
            "scope": "text.other.pokemon_ds_script", // Blue
            "settings": {
                "foreground": "#7391d3"
            }
        },
        {
            "scope": "comment.line.double-slash.pokemon_ds_script", // White for comments starting with ##
            "settings": {
                "foreground": "#9c9898"
            }
        }
    ]
}
